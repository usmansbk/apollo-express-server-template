{
  "presets": [["@babel/preset-env", { "targets": { "node": "current" } }]],
  "plugins": [
    "@babel/plugin-transform-runtime",
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "~config": "./src/config",
          "~api": "./src/api",
          "~utils": "./src/utils",
          "~services": "./src/services",
          "~db": "./src/db",
          "~helpers": "./src/helpers"
        }
      }
    ]
  ]
}
