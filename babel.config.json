{
  "presets": ["@babel/preset-env"],
  "plugins": [
    "@babel/plugin-transform-runtime",
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "~config": "./src/config",
          "~graph-api": "./src/graphql",
          "~utils": "./src/utils",
          "~services": "./src/services",
          "~db": "./src/db",
          "~helpers": "./src/helpers",
          "~locales": "./src/locales"
        }
      }
    ]
  ]
}
